- var date = (new Date()).toLocaleDateString();
- var font = 'https://fonts.googleapis.com/css?family=Lora&display=swap'
- var data = '{"cards": {"0": {"text": "hello", "type": "red"}}, "views": [{"card": "0", "cell": [0, 0]}]}'
- var types = ['black', 'red', 'green', 'blue']

doctype html
html
    head
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        title domino
        script#data(type='text/json') !{data}
        link(href!=font, rel='stylesheet')
        style
            include style.css
        script
            include library/DragDropTouch.min.js
        script
            include library/FileSaver.min.js
        script
            include script.js

    body(onload='loaded()')
        span#debug debug
        #screen.no-select
        main#scene
        #toolbar.icon-bar
            button(onclick='document.querySelector("#about-screen").hidden = false;', title='information about this tool') ‚ùî
            button#center(title='jump to center') üß≠
            button#add-delete-icon(draggable='true', title='drag a new card from here or a drop an unwanted card') üóÉÔ∏è
            button#import(title='import a domino project') üìÇ
            button#export(title='export as html') üì¶
            input#import-file(type='file', accept='.html', hidden)
        #cardbar.icon-bar(hidden)
            button#edit(title='edit selected card', onclick='document.querySelector("#editor-panel").hidden = false;') üìù
        #editor-panel(hidden)
            button(onclick='document.querySelector("#editor-panel").hidden = true;', style='float: right') close
            h3 edit card
            #type-select
                each type_ in types
                    div(onclick=`setCardType('${type_}')`, class='type-button ' + type_)
            textarea#content-input
        #about-screen(onclick='document.querySelector("#about-screen").hidden = true;', hidden)
            #about-panel
                button(onclick='document.querySelector("#about-screen").hidden = true;') exit window
                #version
                    | version‚Äî
                    include version.txt
                    |  (#{date})
                include:markdown-it(html) about.md
