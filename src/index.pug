- var version = 'alpha';
- var date = (new Date()).toLocaleDateString();
- var font = 'https://fonts.googleapis.com/css?family=Lora&display=swap'
- var data = '{"cards": {"0": {"text": "hello", "type": "red"}}, "views": [{"card": "0", "cell": [0, 0]}]}'
- var types = ['black', 'red', 'green', 'blue']

doctype html
html
    head
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        title domino
        script#data(type='text/json') !{data}
        link(href!=font, rel='stylesheet')
        style
            include style.css
        script
            include library/DragDropTouch.min.js
        script
            include library/FileSaver.min.js
        script
            include script.js

    body(onload='loaded()')
        span#debug debug
        #screen.no-select
        main#scene
        #toolbar
            button(onclick='document.querySelector("#about-screen").hidden = false;') ‚ùî
            button#center üß≠
            button#add-delete-icon(draggable='true') üóÉÔ∏è
            button#import üìÇ
