- var date = (new Date()).toLocaleDateString();
- var font = "https://fonts.googleapis.com/css?family=Lora&display=swap"
- var types = ["black", "red", "green", "blue"]

doctype html
html
    head
        meta(charset="utf-8")
        meta(name="viewport", content="width=device-width, initial-scale=1")
        title domino
        script#data(type="text/json")
            include default-board.json
        link(href!=font, rel="stylesheet")
        style
            include style.css
        script
            include library/domino-utility.js
        script
            include library/DragDropTouch.min.js
        script
            include library/FileSaver.min.js
        script
            include script.js
    body(onload="loaded()").no-select
        #templates(hidden)
            #card-template.card(draggable="true")
                .card-text
                .card-icon-bar.icon-bar
                    //button 🔗
                    //button 🌍
                    //button 📖
            #cardbar-template.card-edit-bar.icon-bar(hidden)
                button#edit-card(title="edit this card") 📝
        #screen
        main#scene
        #toolbar.icon-bar
            button#open-about(title="information about this tool") ❔
            button#center(title="jump to center") 🧭
            button#add-delete-icon(hidden, draggable="true", title="drag a new card from here or a drop an unwanted card") 🗃️
            button#fullscreen(title="toggle fullscreen", hidden) 💢
            button#unlocked(title="prevent accidental editing") 🔓
            button#locked(title="enable editing", hidden) 🔒
        #editor-screen.screen.click-to-hide(hidden)
            #editor-preview
            #editor-section.block-clicks
                h3 edit card
                #type-select
                    each type_ in types
                        div(class="type-button " + type_)
                textarea#content-input
        #about-screen.screen.click-to-hide(hidden)
            .full-panel.block-clicks
                button.close-parent-screen exit window
                #version
                    | version—
                    include version.txt
                    |  (#{date})
                #project-menu
                    button#import(title="import a domino project") 📂 import from html
                    button#export(title="export as html") 📦 export to html
                    button#reset(title="remove all cards") ❌ remove all cards
                input#import-file(type="file", accept=".html", hidden)
                include:markdown-it(html) about.md
