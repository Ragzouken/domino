- var font = 'https://fonts.googleapis.com/css?family=Lora&display=swap'
- var data = '{"cards": {"0": {"text": "hello", "type": "red"}}, "views": [{"card": "0", "cell": [0, 0]}]}'

doctype html
html
    head
        meta(charset='utf-8')
        title domino
        script#data(type='text/json') !{data}
        link(href!=font, rel='stylesheet')
        style
            include style.css
        script
            include library/DragDropTouch.min.js
        script
            include library/FileSaver.min.js
        script
            include script.js

    body(onload='loaded()')
        span#debug debug
        main
        #sidebar
            button#add-card(draggable='true') drag to add card
            button#del-card drop card to delete
            hr
            select#type-select
            textarea#content-input(hidden)
            hr
            button#download download
