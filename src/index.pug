- var date = (new Date()).toLocaleDateString();
- var font = "https://fonts.googleapis.com/css?family=Lora&display=swap"

doctype html
html
    head
        meta(charset="utf-8")
        meta(name="viewport", content="width=device-width, initial-scale=1")
        include twitter.pug
        title domino
        script#data(type="text/json")
            include default-board.json
        link(href!=font, rel="stylesheet")
        style
            include base-style.css
        style#user-style
            include user-style.css
        script
            include library/domino-utility.js
        script
            include library/DragDropTouch.min.js
        script
            include library/FileSaver.min.js
        script
            include script.js
    body(onload="loaded()").no-select
        #templates(hidden)
            #card-template.card(draggable="true")
                .card-text
                .card-icon-bar.icon-bar
            #cardbar-template.card-edit-bar.icon-bar(hidden)
                button#edit-card(title="edit this card") 📝
        #screen
            #card-gap-measure
            main#scene(data-export-clear)
        #coords #0,0
        #toolbar.icon-bar
            button#open-about(title="information about this tool") ❔
            button#center(title="jump to center") 🏠
            button#add-delete-icon(hidden, draggable="true", title="drag a new card from here or a drop an unwanted card") 🗃️
            button#fullscreen(title="toggle fullscreen", hidden) 💢
            button#unlocked(title="prevent accidental editing") 🔓
            button#locked(title="enable editing", hidden) 🔒
        #display-screen.screen(hidden, data-click-to-hide)
            iframe#display-frame(data-block-clicks, allow="autoplay")
        #display-image-screen.screen(hidden, data-click-to-hide)
            image#display-image
        #editor-screen.screen(hidden, data-click-to-hide)
            #editor-preview
            #editor-section(data-block-clicks)
                #editor-tabs
                    #editor-tab-text TEXT
                    #editor-tab-icons ICONS
                    #editor-tab-style STYLE
                #editor-page-text.editor-page(hidden)
                    textarea#content-input
                #editor-page-icons.editor-page(hidden)
                    each row in [1, 2, 3, 4]
                        input(id=`editor-icon-select-${row}`, type="text").icon-select
                        input(id=`editor-icon-command-${row}`, type="text").icon-command
                #editor-page-style.editor-page(hidden)
                    #type-select(data-export-clear)
        #style-screen.screen(hidden, data-click-to-hide)
            #style-section(data-block-clicks)
                textarea#style-input
        #about-screen.screen(hidden, data-click-to-hide, data-export-hide)
            .full-panel(data-block-clicks)
                button(data-close-parent-screen) exit window
                #version
                    | version—
                    include version.txt
                    |  (#{date})
                #project-menu
                    button#style(title="change board style") 🎨 modify style
                    button#import(title="import a domino project") 📂 import from html
                    button#export(title="export as html") 📦 export to html
                    button#reset(title="remove all cards") ❌ remove all cards
                input#import-file(type="file", accept=".html", hidden)
                include:markdown-it(html) about.md
